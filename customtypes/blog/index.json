{
  "format": "custom",
  "id": "blog",
  "label": "Blog",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "short_description": {
        "type": "StructuredText",
        "config": {
          "label": "Short Description",
          "placeholder": "Short description for the blog post",
          "allowTargetBlank": true,
          "single": "paragraph,strong,em"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "publication_date": {
        "type": "Date",
        "config": {
          "label": "Publication Date",
          "placeholder": ""
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "repeat": false,
          "customtypes": [
            {
              "id": "author",
              "fields": ["name", "picture"]
            }
          ]
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "repeat": true,
          "fields": {
            "tag_name": {
              "type": "Text",
              "config": {
                "label": "Tag name",
                "placeholder": ""
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "call_to_action": {
              "type": "SharedSlice"
            },
            "image_block": {
              "type": "SharedSlice"
            },
            "rich_text_content": {
              "type": "SharedSlice"
            },
            "code_block": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": ""
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": ""
        }
      },
      "social_image": {
        "type": "Image",
        "config": {
          "label": "Social Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "keywords": {
        "type": "Group",
        "config": {
          "label": "Keywords",
          "repeat": true,
          "fields": {
            "keyword": {
              "type": "Text",
              "config": {
                "label": "Keyword",
                "placeholder": ""
              }
            }
          }
        }
      }
    }
  }
}
