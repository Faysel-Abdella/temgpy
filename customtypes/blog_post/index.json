{
  "format": "custom",
  "id": "blog_post",
  "label": "Blog post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Blog post title"
        }
      },
      "short_description": {
        "type": "StructuredText",
        "config": {
          "label": "Short Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "publication_date": {
        "type": "Date",
        "config": {
          "label": "Publication Date",
          "placeholder": ""
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "repeat": false,
          "customtypes": [
            {
              "id": "author",
              "fields": ["name", "picture"]
            }
          ]
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "repeat": true,
          "fields": {
            "tag_name": {
              "type": "Text",
              "config": {
                "label": "Tag name",
                "placeholder": ""
              }
            }
          }
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": ""
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": ""
        }
      },
      "social_image": {
        "type": "Image",
        "config": {
          "label": "Social Image",
          "constraint": {},
          "thumbnails": []
        }
      }
    }
  }
}
